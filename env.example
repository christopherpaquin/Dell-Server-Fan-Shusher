# Dell R730 iDRAC Credentials
IDRAC_IP=10.1.10.20
IDRAC_USER=root
IDRAC_PASS=calvin

# GPU Temperature Thresholds (Celsius) - 7 levels for granular control
# Temperature ranges: <VERY_LOW, VERY_LOW-LOW, LOW-MED_LOW, MED_LOW-MED, MED-MED_HIGH, MED_HIGH-HIGH, HIGH-VERY_HIGH, >=VERY_HIGH
GPU_TEMP_VERY_LOW=35      # 95°F
GPU_TEMP_LOW=45           # 113°F
GPU_TEMP_MED_LOW=55       # 131°F
GPU_TEMP_MED=65           # 149°F
GPU_TEMP_MED_HIGH=75      # 167°F
GPU_TEMP_HIGH=85          # 185°F
GPU_TEMP_VERY_HIGH=95     # 203°F

# System Temperature Thresholds (Celsius) - 7 levels for granular control
# Temperature ranges: <VERY_LOW, VERY_LOW-LOW, LOW-MED_LOW, MED_LOW-MED, MED-MED_HIGH, MED_HIGH-HIGH, HIGH-VERY_HIGH, >=VERY_HIGH
SYSTEM_TEMP_VERY_LOW=25   # 77°F
SYSTEM_TEMP_LOW=35        # 95°F
SYSTEM_TEMP_MED_LOW=45    # 113°F
SYSTEM_TEMP_MED=55        # 131°F
SYSTEM_TEMP_MED_HIGH=65   # 149°F
SYSTEM_TEMP_HIGH=75       # 167°F
SYSTEM_TEMP_VERY_HIGH=85  # 185°F

# Fan Speed Percentages (0-100) - 7 levels matching temperature ranges
# For cold room scenarios, lower speeds can be used for lower temperature ranges
FAN_SPEED_VERY_LOW=10
FAN_SPEED_LOW=15
FAN_SPEED_MED_LOW=25
FAN_SPEED_MED=35
FAN_SPEED_MED_HIGH=50
FAN_SPEED_HIGH=65
FAN_SPEED_VERY_HIGH=80

# Temperature threshold for switching to automatic mode (let iDRAC handle it)
# If temps exceed this, disable manual mode and let iDRAC take over
AUTO_MODE_THRESHOLD=75    # 167°F

# GPU Temperature Priority Override
# When enabled (true), GPU temperatures take priority over system temperatures
# If GPU temps are above GPU_TEMP_LOW, they will be used for fan control
# even if system temps are lower. This ensures fans respond to GPU heat.
# Set to false to use the higher of GPU or system temp (current behavior)
GPU_TEMP_OVERRIDE=true

# IPMI timeout settings (seconds)
# Increase if ipmitool commands are slow or timing out
# Default: 20 seconds timeout, 2 retries
IPMI_TIMEOUT=20
IPMI_RETRIES=2

# Log file path
LOG_FILE=/var/log/dell-r730-fan-control.log

# Unified data log file for learning/analysis (temperatures + fan speeds together)
# Used by learn_thresholds.py to analyze patterns and suggest threshold adjustments
# Default: fan_control_data.log in script directory
DATA_LOG_FILE=fan_control_data.log
